modules = ["nodejs-20", "python-3.11", "python3"]

[nix]
channel = "stable-24_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Android App Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Native App"

[[workflows.workflow]]
name = "Android App Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew :app:installDebug && adb shell am start -n com.animeai.app/.MainActivity"

[[workflows.workflow]]
name = "API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[[workflows.workflow]]
name = "React Native App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd animeai-app && npx expo start --web --port 5173"
waitForPort = 5173

[deployment]
run = ["sh", "-c", "./gradlew :app:installDebug && adb shell am start -n com.animeai.app/.MainActivity"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 19006
externalPort = 3000
